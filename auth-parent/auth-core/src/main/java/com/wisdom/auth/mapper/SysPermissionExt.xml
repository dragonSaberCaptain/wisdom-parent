<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wisdom.auth.dao.SysPermissionExt">
    <!-- 通用查询映射结果 继承 -->
    <resultMap id="BaseResultMap" type="com.wisdom.auth.entity.SysPermission" extends="com.wisdom.auth.dao.SysPermissionDao.BaseResultMap"/>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        parent_id, name, ename, url, description, create_time, update_time
    </sql>

    <!-- 基本的sql查询条件公共引用 -->
    <sql id="searchBy">
        <trim prefix="where" prefixOverrides="and|or">
            <!-- 生成公共字段 -->
            <if test="id != null">id=#{id}</if>
            <!-- 生成普通字段 -->
            <if test="parentId != null">parent_id=#{parentId}</if>
            <if test="name != null">name=#{name}</if>
            <if test="ename != null">ename=#{ename}</if>
            <if test="url != null">url=#{url}</if>
            <if test="description != null">description=#{description}</if>
            <if test="createTime != null">create_time=#{createTime}</if>
            <if test="updateTime != null">update_time=#{updateTime}</if>

        </trim>
    </sql>

    <select id="selectByUserId" resultMap="com.wisdom.auth.dao.SysPermissionDao.BaseResultMap">
        SELECT
            p.id,
            p.parent_id,
            p.NAME,
            p.ename,
            p.url,
            p.description,
            p.create_time,
            p.update_time
        FROM
            sys_permission AS p
            LEFT JOIN sys_role_permission AS rp ON rp.permission_id = p.id
            LEFT JOIN sys_role AS r ON r.id = rp.role_id
            LEFT JOIN sys_user_role AS ur ON ur.role_id = r.id
            LEFT JOIN sys_user AS u ON u.id = ur.user_id
        WHERE
            u.id = #{ userId }
    </select>

</mapper>
